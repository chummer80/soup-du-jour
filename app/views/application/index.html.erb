<div class="grid">

	<div class="grid-item shuffle-div date">
		<p class="well lead">Soup du Jour for <%= Date.today.strftime("%A, %B %d") %>
		</p>
	</div>

	<div class="grid-item soup" a data-toggle="modal" href="#soup-modal">
		<div id="hoverzoomfade"></div>
		<ul class="photo-grid">
		<li>
		<figure>
			<img src="" alt="" class="img-responsive">
			<figcaption><p></p></figcaption>
		</figure>
		</li>
		</ul>
		</div>
	</div>

	<div class="modal fade" id="soup-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
		<div class="modal-dialog">
		</div>
	</div>

